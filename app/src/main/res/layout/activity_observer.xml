<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huixuegong.androiddevelop.designmode.observer.ObserverActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">

    <Button
        android:id="@+id/add_lister"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="register listener"/>

    <Button
        android:id="@+id/del_listen"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="unregister listner"/>

    <Button
        android:id="@+id/notify"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="notify all observer"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
